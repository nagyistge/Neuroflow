<sap:ActivityDesigner x:Class="Neuroflow.Design.ActivityDesigners.ComputationContextDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
                      xmlns:controls="clr-namespace:Neuroflow.Design.ActivityDesigners.Controls">
    <Grid>
        <controls:ExpandedView IsExpanded="{Binding ShowExpanded, Mode=OneWay}">
            <sap:WorkflowItemPresenter Item="{Binding ModelItem.Body}" HintText="Drop activity here"/>
        </controls:ExpandedView>
    </Grid>
</sap:ActivityDesigner>
