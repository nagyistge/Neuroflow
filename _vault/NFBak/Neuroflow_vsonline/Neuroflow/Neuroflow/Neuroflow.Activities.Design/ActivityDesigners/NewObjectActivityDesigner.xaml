<sap:ActivityDesigner x:Class="Neuroflow.Activities.Design.ActivityDesigners.NewObjectActivityDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation" 
                      xmlns:prj="clr-namespace:Neuroflow.Activities.Design.ActivityDesigners"
                      xmlns:controls="clr-namespace:Neuroflow.Activities.Design.ActivityDesigners.Controls">
    <Grid>
        <controls:ExpandedView IsExpanded="{Binding ShowExpanded, Mode=OneWay}">
            <controls:NewObjectActivityPresenter ModelItem="{Binding ModelItem}"/>
        </controls:ExpandedView>
    </Grid>
</sap:ActivityDesigner>
